# ChurnVision Enterprise - Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# ===== LICENSE =====
LICENSE_KEY=your-jwt-license-key-here
LICENSE_SECRET_KEY=your-secret-for-license-generation

# ===== DATABASE =====
POSTGRES_USER=churnvision
POSTGRES_PASSWORD=change-this-strong-password
POSTGRES_DB=churnvision
DATABASE_URL=postgresql+asyncpg://churnvision:change-this-strong-password@db:5432/churnvision

# ===== SECURITY =====
JWT_SECRET_KEY=change-this-jwt-secret-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== ENVIRONMENT =====
ENVIRONMENT=production
DEBUG=false

# ===== API KEYS (if using external services) =====
OPENAI_API_KEY=sk-your-openai-key-if-needed
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-if-needed

# ===== OLLAMA =====
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama2:7b

# ===== CORS =====
ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000
BACKEND_CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# ===== COMPANY INFO =====
COMPANY_NAME=Your Company Name
TENANT_ID=default

# ===== LOGGING =====
LOG_LEVEL=INFO

# ===== RATE LIMITING =====
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15
LOGIN_ATTEMPT_WINDOW_MINUTES=15

# ===== STORAGE =====
MODELS_DIR=/app/models

# ===== RATE LIMITING =====
RATE_LIMIT_PER_MINUTE=60
